@model IEnumerable<TaskManager.Models.GroupsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista twoich grup</h1>


<div class="btn-group">
    <div class="shadow-lg p-3 mb-5 bg-white rounded">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NameOfGroup)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:65%">
                            @Html.DisplayFor(modelItem => item.NameOfGroup)
                        </td>
                        <td style="width:35%">
                            @Html.ActionLink("Edytuj", "Edit", new { id = item.GroupID }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Usuń", "Delete", new { id = item.GroupID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

