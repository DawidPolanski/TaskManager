@model TaskManager.Models.GroupsModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Dodaj grupę</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameOfGroup" class="control-label"></label>
                <input asp-for="NameOfGroup" class="form-control" placeholder="Wpisz nazwę grupy"/>
                <span asp-validation-for="NameOfGroup" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark"asp-controller="Task" asp-action="Index">Wróć do listy zadań</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

