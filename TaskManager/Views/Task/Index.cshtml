@model IEnumerable<TaskManager.Models.TaskModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Lista zadań</h1>

<a class="btn btn-primary" asp-action="Create">Dodaj zadanie</a>
<a class="btn btn-primary" asp-controller="Groups" asp-action="Create">Dodaj grupe</a>
<button style="float:right" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Wyświetl grupy
</button>

<div class="dropdown-menu">
    <a class="dropdown-item" href="https://github.com/DawidPolanski/TaskManager">Mój GitHub</a>
    <a class="dropdown-item" href="#">not implemented</a>
    <a class="dropdown-item" href="#">not implemented</a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="#">not implemented</a>
</div>

<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                        <div style="float:right">
                            <a style="padding-left:50px">
                                @Html.ActionLink("Gotowe", "Done", new { id = item.TaskId }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Szczegóły", "Details", new { id = item.TaskId }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Dodaj do grupy", "AddTaskToGroup", "Groups", new { id = item.TaskId }, new { @class = "btn btn-dark" })
                                @Html.ActionLink("Edytuj", "Edit", new { id = item.TaskId }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Usuń", "Delete", new { id = item.TaskId }, new { @class = "btn btn-danger" })
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
